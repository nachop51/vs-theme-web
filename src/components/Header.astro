---
interface Props {
  title: string;
  highlight?: string;
  description?: string;
  full?: boolean;
  centerContent?: boolean;
}

const { title, highlight, description, full = false } = Astro.props;
---

<header class:list={[{ "min-h-screen": full }]}>
  <h1>
    <slot name="before" />
    {title}
    {highlight != null && <span class="highlight">{highlight}</span>}
  </h1>

  {
    description != null && (
      <p class="text-center text-white text-balance text-base font-extralight mb-8">
        {description}
      </p>
    )
  }

  <slot name="extra" />

  <style>
    header {
      @apply px-4 sm:px-12 text-xl pt-20 relative mb-6 sm:mb-12;
      background: url("data:image/svg+xml;base64,"),
        url("data:image/svg+xml;base64,PHN2ZyB2aWV3Qm94PSIwIDAgMTQ0MCA3ODYiIGZpbGw9Im5vbmUiIHhtbG5zPSJodHRwOi8vd3d3LnczLm9yZy8yMDAwL3N2ZyIgcHJlc2VydmVBc3BlY3RSYXRpbz0ibm9uZSI+CjxwYXRoIGQ9Ik0wIDBIMTQ0MFY3ODZDOTc4LjY3MSA1OTYuNjYzIDQ2MS4zMjkgNTk2LjY2MyAwIDc4NlYwWiIgZmlsbD0iIzA3MUMzNCIvPgo8L3N2Zz4=");
      background-size:
        100% 70%,
        contain;
      background-repeat: no-repeat, no-repeat;
    }

    header * {
      @apply max-w-5xl mx-auto;
    }

    h1 {
      @apply text-4xl sm:text-6xl md:text-7xl font-bold text-center text-pretty text-white mb-6;
    }
  </style>
</header>
