---
import Navbar from "../components/Navbar.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="VS Code Theme Builder - Build and customize your theme"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <meta name="url" content="http://vs-theme-builder.nachop.xyz" />
    <link rel="canonical" href="https://vs-theme-builder.nachop.xyz" />

    <meta
      property="og:title"
      content="VS Code Theme Builder - Build and customize your theme"
    />
    <meta property="og:url" content="https://vs-theme-builder.nachop.xyz" />
    <meta
      property="og:description"
      content="Build and customize your VS Code theme with a simple and intuitive API"
    />
    <meta
      property="og:image"
      content="https://vs-theme-builder.nachop.xyz/favicon.svg"
    />
    <meta property="og:type" content="website" />
    <meta
      name="keywords"
      content="theme, theme-builder, vscode, nachop, code, editor, extension, color, customization"
    />
    <meta name="author" content="Ignacio Peralta" />
    <meta name="robots" content="index,follow" />

    <!-- fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <Navbar />
    <slot />
  </body>
</html>

<style is:global lang="postcss">
  :root {
    --bg: #f1f5f9;
    --text: #333;
    --primary: #7928ca;
    --primary-rgb: 121 40 202;
    --accent: #ff0080;
    --accent-rgb: 255 0 128;

    font-family: Outfit, sans-serif;
    color-scheme: dark;

    background-color: var(--bg);
    color: var(--text);
  }

  *,
  *::before,
  *::after {
    @apply m-0 p-0 box-border;
  }

  section h2 {
    @apply font-extrabold text-3xl sm:text-4xl text-center text-pretty mb-4;
  }

  .highlight {
    background-image: linear-gradient(to right, var(--primary), var(--accent));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .link {
    @apply text-[var(--primary)] no-underline;
  }

  .link:hover {
    @apply underline text-[var(--accent)];
  }
</style>
