---
import { Image } from "astro:assets";
import Card from "../components/Card.astro";
import Feature from "../components/Feature.astro";
import Layout from "../layouts/Layout.astro";

import headerImage from "/public/header.png";
import demoImage from "/public/demo.png";

import eyeSvg from "/public/eye.svg?raw";
import boltSvg from "/public/bolt.svg?raw";
import bookSvg from "/public/book.svg?raw";
import paletteSvg from "/public/palette.svg?raw";

import packageImage from "/public/package.svg?raw";
import featuresImage from "/public/features.svg?raw";

const features = [
  {
    icon: eyeSvg,
    title: "Eye comfort",
    description:
      "Protect your eyes with soft, balanced colors, perfect for long work sessions",
    color: "#d1fae5",
  },
  {
    icon: boltSvg,
    title: "Faster understanding",
    description:
      "Enhance reading speed and comprehension by associating colors with key code elements",
    color: "#cffafe",
  },
  {
    icon: bookSvg,
    title: "Better readability",
    description:
      "Enjoy clear, easy-to-read code with optimized fonts and proper contrast",
    color: "#dbeafe",
  },
  {
    icon: paletteSvg,
    title: "Consistent palette",
    description:
      "Maintain visual uniformity across languages with a carefully selected color palette",
    color: "#ede9fe",
  },
];

const stuffIncluded = [
  {
    title: "Package Functionality",
    description:
      "Effortlessly generate customizable VSCode themes using this package",
    icon: packageImage,
    tags: ["Easy to use", "Customizable", "Powerful"],
  },
  {
    title: "Key Features",
    description:
      "Enjoy features like auto-update and color palette suggestions",
    icon: featuresImage,
    tags: ["Auto-update", "Palette suggestions", "Color picker"],
  },
];
---

<Layout title="VS Theme Builder">
  <header class="page-header">
    <h1>
      Create Stunning VSCode themes
      <span class="text-gradient">with ease</span>
    </h1>
    <p
      class="text-center text-white text-balance text-base font-extralight mb-8"
    >
      Lorem ipsum dolor sit amet consectetur, adipisicing elit. Nobis animi cum
      a consequuntur officiis! Vitae exercitationem nobis, perferendis cum
      recusandae eaque provident quidem nemo animi ipsam officiis qui reiciendis
      assumenda.
    </p>
    <picture class="w-full">
      <Image
        src={headerImage}
        class="mx-auto max-w-xl w-full"
        alt="Theme visualization"
        loading={"eager"}
      />
    </picture>
  </header>
  <main>
    <!-- Features section -->
    <section class="mb-16">
      <header class="max-w-5xl">
        <h2 class="text-left">What's Included</h2>
        <p class="mb-6">
          Discover the powerful features of the npm package designed to enhance
          your VS Code theming experience. This package streamlines the creation
          process, providing essential tools and functionalities to help you
          build and customize your themes with ease.
        </p>
      </header>
      <div class="flex flex-wrap justify-around gap-6">
        {stuffIncluded.map((stuff) => <Card {...stuff} />)}
      </div>
    </section>
    <!-- Showcase section -->
    <section>
      <h2>Nachop Theme Showcase</h2>
      <p class="text-center mb-8">
        Lorem Neque magni quis voluptates molestiae enim ipsum dolor sit amet
        consectetur adipisicing elit. Quasi, sit consequatur. Neque magni quis
        voluptates molestiae enim.
      </p>
      <Image
        src={demoImage}
        alt="Nachop Theme Showcase"
        class="max-w-3xl w-full mx-auto mb-6"
        loading={"eager"}
      />
      <div
        class="grid grid-cols-2 md:grid-cols-4 justify-items-center gap-12 sm:px-6"
      >
        {features.map((feature) => <Feature {...feature} />)}
      </div>
    </section>
  </main>
</Layout>

<style lang="postcss">
  .page-header {
		@apply mx-auto p-4 text-xl pt-20 relative mb-6 sm:mb-12;
		background: url("data:image/svg+xml;base64,"), url("data:image/svg+xml;base64,PHN2ZyB2aWV3Qm94PSIwIDAgMTQ0MCA3ODYiIGZpbGw9Im5vbmUiIHhtbG5zPSJodHRwOi8vd3d3LnczLm9yZy8yMDAwL3N2ZyIgcHJlc2VydmVBc3BlY3RSYXRpbz0ibm9uZSI+CjxwYXRoIGQ9Ik0wIDBIMTQ0MFY3ODZDOTc4LjY3MSA1OTYuNjYzIDQ2MS4zMjkgNTk2LjY2MyAwIDc4NlYwWiIgZmlsbD0iIzA3MUMzNCIvPgo8L3N2Zz4=");
		background-size: 100% 70%, contain;
		background-repeat: no-repeat, no-repeat;
  }

  main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem;
  }

  h1 {
    @apply text-4xl sm:text-6xl md:text-7xl font-bold text-center text-pretty text-white mb-6;
  }

  .text-gradient {
    background-image: linear-gradient(to right, var(--primary), var(--accent));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
</style>
